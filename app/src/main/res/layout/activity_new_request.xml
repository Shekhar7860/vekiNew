<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/footer"
        android:layout_alignParentTop="true"
        android:clickable="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@color/white"
                        android:orientation="horizontal">
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cv_back"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_margin="10dp"
                            android:foreground="?android:attr/selectableItemBackground"
                            app:cardCornerRadius="8dp"
                            android:clickable="true"
                            android:focusable="true"
                            app:cardElevation="8dp">

                        <ImageView
                            android:id="@+id/back_button_home_activity"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:src="@drawable/back_arrow" />
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:id="@+id/heading_home_activity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/cv_back"
                            android:layout_centerVertical="true"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="New Request"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/large_text"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="120dp"
                            android:layout_marginTop="14dp"
                            android:layout_toRightOf="@+id/heading_home_activity"
                            android:src="@mipmap/ic_alert"
                            android:textSize="16sp" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="10dp"
                    android:gravity="start"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_loc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="Location"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/rl_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_loc"
                        android:layout_margin="10dp"
                        app:cardBackgroundColor="#F7F7F7"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="8dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <AutoCompleteTextView
                                android:id="@+id/ac_location"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:completionThreshold="2"
                                android:focusable="true"
                                android:hint="Type to search your location"
                                android:overScrollMode="always"
                                android:padding="10dp"
                                android:shadowColor="@color/colorPrimaryDark"
                                android:singleLine="true"
                                android:textColorHint="@color/grey" />

                            <ImageView
                                android:id="@+id/iv_gps"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:src="@mipmap/ic_gps" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/tv_setOnMap"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rl_location"
                        android:layout_margin="15dp"
                        android:background="@drawable/rectangle_circular_ends"
                        android:backgroundTint="@color/colorPrimary"
                        android:gravity="center"
                        android:padding="7dp"
                        android:text="Set on map"
                        android:textColor="@color/white"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_tos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_setOnMap"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:text="Type Of Service"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/rl_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_tos"
                        android:layout_margin="10dp"
                        app:cardBackgroundColor="#F7F7F7"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="8dp">

                        <Spinner
                            android:id="@+id/spinner"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:spinnerMode="dropdown" />
                    </androidx.cardview.widget.CardView>
                    <!--<EditText-->
                    <!--android:layout_marginTop="130dp"-->
                    <!--android:layout_centerHorizontal="true"-->
                    <!--android:layout_width="320dp"-->
                    <!--android:layout_height="50dp"-->
                    <!--android:background="@drawable/rounded_edittext"-->
                    <!--android:hint="Enter your location"-->
                    <!--android:paddingLeft="10dp"-->
                    <!--android:paddingRight="10dp"-->
                    <!--android:drawableRight="@drawable/down"/>-->
                    <TextView
                        android:id="@+id/tv_note"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rl_spinner"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp"
                        android:text="Notes"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cd_notes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_note"
                        android:layout_margin="10dp"
                        app:cardBackgroundColor="#F7F7F7"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="8dp">

                        <EditText
                            android:id="@+id/et_note"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:background="@null"
                            android:gravity="top"
                            android:hint="My Car has got a major issue..I am unable to operate it...I think there is a power issue"
                            android:padding="10dp"
                            android:textSize="@dimen/regular_text" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/tv_addPhoto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cd_notes"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp"
                        android:text="Add Photos"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_addPhoto"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:id="@+id/firstbox"
                            android:layout_width="100dp"
                            android:layout_height="80dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:layout_centerInParent="true"
                                android:layout_margin="3dp"
                                app:cardBackgroundColor="#F7F7F7"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="8dp">

                                <ImageView
                                    android:id="@+id/camera_image3"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:scaleType="center"
                                    android:src="@drawable/camera"
                                    android:visibility="visible" />

                                <ImageView
                                    android:id="@+id/cross"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentBottom="true"
                                    android:layout_gravity="end|bottom"
                                    android:src="@drawable/cross"
                                    android:visibility="gone" />
                            </androidx.cardview.widget.CardView>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/secondbox"
                            android:layout_width="100dp"
                            android:layout_height="80dp"
                            android:layout_toRightOf="@+id/firstbox">

                            <androidx.cardview.widget.CardView
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:layout_centerInParent="true"
                                android:layout_margin="3dp"
                                app:cardBackgroundColor="#F7F7F7"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="8dp">

                                <ImageView
                                    android:id="@+id/camera_image"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true"
                                    android:layout_gravity="center"
                                    android:scaleType="center"
                                    android:src="@drawable/camera"
                                    android:visibility="visible" />

                                <ImageView
                                    android:id="@+id/cross2"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentBottom="true"
                                    android:layout_gravity="end|bottom"
                                    android:src="@drawable/cross"
                                    android:visibility="gone" />
                            </androidx.cardview.widget.CardView>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="100dp"
                            android:layout_height="80dp"
                            android:layout_toRightOf="@+id/secondbox">

                            <androidx.cardview.widget.CardView
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:layout_centerInParent="true"
                                android:layout_margin="3dp"
                                app:cardBackgroundColor="#F7F7F7"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="8dp">

                                <ImageView
                                    android:id="@+id/camera_image2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:scaleType="center"
                                    android:src="@drawable/camera"
                                    android:visibility="visible" />

                                <ImageView
                                    android:id="@+id/cross3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="end|bottom"
                                    android:src="@drawable/cross"
                                    android:visibility="gone" />
                            </androidx.cardview.widget.CardView>
                        </RelativeLayout>
                    </RelativeLayout>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="-20dp"
                        android:text="GET LOCATION"
                        android:visibility="gone" />
                </RelativeLayout>
                <!--<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"-->
                <!--android:orientation="vertical"-->
                <!--android:layout_width="fill_parent"-->
                <!--android:layout_height="fill_parent"-->
                <!--android:layout_marginTop="120dp"-->

                <!--&gt;-->
                <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginLeft="30dp"-->
                <!--android:textSize="15sp"-->
                <!--android:text="fdfgfgffg"/>-->
                <!--<EditText-->

                <!--android:layout_centerHorizontal="true"-->
                <!--android:layout_width="320dp"-->
                <!--android:layout_height="50dp"-->
                <!--android:background="@drawable/rounded_edittext"-->
                <!--android:hint="sssss"-->
                <!--android:paddingLeft="10dp"-->
                <!--android:paddingRight="10dp"-->
                <!--android:drawableRight="@drawable/back"/>-->

                <!--</RelativeLayout>-->
                <!--<FrameLayout-->
                <!--android:id="@+id/frame_layout_home_activity"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--/>-->

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center">

        <Button
            android:id="@+id/btn_help"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@color/colorPrimaryDark"
            android:backgroundTint="@color/colorPrimaryDark"
            android:gravity="center"
            android:text="Need a Help!"
            android:textColor="@color/white" />
    </RelativeLayout>


</RelativeLayout>